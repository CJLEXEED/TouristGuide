<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JournalActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapFragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Added margin for spacing -->

    <EditText
        android:id="@+id/journalEntry"
        android:layout_width="409dp"
        android:layout_height="79dp"
        android:autofillHints=""
        android:background="@android:drawable/editbox_background"
        android:hint="                                SM Baguio "
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapFragment"
        tools:ignore="HardcodedText,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/journalEntry6"
        android:layout_width="409dp"
        android:layout_height="79dp"
        android:autofillHints=""
        android:background="@android:drawable/editbox_background"
        android:hint="           Baguio Cathedral of Our Lady of the Atonement "
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journalEntry"
        tools:ignore="HardcodedText,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/journalEntry7"
        android:layout_width="409dp"
        android:layout_height="79dp"
        android:autofillHints=""
        android:background="@android:drawable/editbox_background"
        android:hint="                   Ili-Likha-Artists Village"
        android:padding="10dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journalEntry6"
        tools:ignore="HardcodedText,TextFields,VisualLintTextFieldSize" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="86dp"
        android:layout_height="79dp"
        app:layout_constraintBottom_toBottomOf="@+id/journalEntry7"
        app:layout_constraintTop_toTopOf="@+id/journalEntry7"
        app:srcCompat="@drawable/art"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="89dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="@+id/journalEntry6"
        app:layout_constraintTop_toTopOf="@+id/journalEntry6"
        app:srcCompat="@drawable/church"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="88dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="@+id/journalEntry"
        app:layout_constraintTop_toTopOf="@+id/journalEntry"
        app:srcCompat="@drawable/store"
        tools:ignore="ContentDescription,MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="51dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/journalEntry"
        app:layout_constraintTop_toBottomOf="@+id/mapFragment"
        app:srcCompat="@drawable/checkmark"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints"
        tools:layout_editor_absoluteX="344dp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="51dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/journalEntry6"
        app:layout_constraintTop_toTopOf="@+id/journalEntry6"
        app:srcCompat="@drawable/checkmark"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints"
        tools:layout_editor_absoluteX="344dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="51dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/journalEntry7"
        app:layout_constraintTop_toTopOf="@+id/journalEntry7"
        app:srcCompat="@drawable/checkmark"
        tools:ignore="ContentDescription,ImageContrastCheck,MissingConstraints"
        tools:layout_editor_absoluteX="344dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
